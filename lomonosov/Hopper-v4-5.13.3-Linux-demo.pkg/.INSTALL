## arg 1:  the new package version
post_install() {
    xdg-icon-resource forceupdate --theme hicolor &> /dev/null
}

## arg 1:  the new package version
## arg 2:  the old package version
post_upgrade() {
    xdg-icon-resource forceupdate --theme hicolor &> /dev/null
	xdg-desktop-menu install /usr/share/applications/hopper-v4.desktop
}
## arg 1:  the old package version
pre_remove() {
    xdg-desktop-menu uninstall /usr/share/applications/hopper-v4.desktop
}
post_remove() {
	xdg-icon-resource forceupdate --theme hicolor &> /dev/null
}

